{
  "name": "jaddek/yii-app-base",
  "description": "Custom app template",
  "keywords": [
    "yii2",
    "api"
  ],
  "type": "project",
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2.0",
    "yiisoft/yii2": "~2.0.15",
    "yiisoft/yii2-swiftmailer": "*",
    "yiisoft/yii2-faker": "^2.0",
    "vlucas/phpdotenv": "^2.4"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "extra": {
    "bootstrap": "console\\ConsoleBootstrap"
  },
  "autoload": {
    "psr-4": {
      "Admin\\": "app/admin/src/",
      "Api\\": "app/api/src/",
      "Common\\": "app/common/src/",
      "Console\\": "app/console/src/",
      "Test\\Api\\": "app/tests/api/src/",
      "Test\\Common\\": "app/tests/common/src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0.0",
    "johnkary/phpunit-speedtrap": "^3.0"
  }
}
